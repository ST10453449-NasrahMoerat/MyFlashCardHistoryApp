<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/history"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="337dp"
        android:layout_height="182dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="364dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to the History FlachCard Ap Quiz! This app helps you study important historical facts using flashcards. You'll answer five True/False questions, get instant feedback on each answer and see your final score at the end. Review the correct answers and track your progress as you learn.                                                                                               Get ready to test your history knowledge. Click the Start Button below!"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:backgroundTint="#1A1616"
        android:text="Start!"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="421dp" />

</androidx.constraintlayout.widget.ConstraintLayout>