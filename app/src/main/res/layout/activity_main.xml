<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="131dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="393dp"
        android:text="Welcome to the History Flashcard App Quiz App! This app helps you study important historical facts using flashcards. You'll answer five True/False questions, get instant feedback on each answer, and see your final score at the end. Review the correct answers and track your progress as you learn. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="285dp"
        android:layout_height="51dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="358dp"
        android:text="Get ready to test your histroy knowledge! Click the Start button below to begin your quiz. Good Luck!"
        android:textAlignment="center"
        android:textColor="#050404"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="458dp"
        android:layout_height="512dp"
        app:srcCompat="@drawable/historical_background"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-176dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="471dp"
        android:layout_height="637dp"
        app:srcCompat="@drawable/historical_background"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="311dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="282dp"
        android:backgroundTint="#574040"
        android:text="Start!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>